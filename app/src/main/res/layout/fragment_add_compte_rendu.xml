<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/loginText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajout de médecin"
        android:textSize="36sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/lavender" />

    <Spinner
        android:id="@+id/medecin_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID Médecin"
        android:inputType="number"
        android:layout_marginBottom="16dp" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:calendarViewShown="false"
        android:textColor="@color/lavender" />

    <Spinner
        android:id="@+id/echantillon_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID Échantillon"
        android:inputType="number"
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/motif_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID Motif"
        android:inputType="number"
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/avis_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID avis"
        android:inputType="number"
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/etat_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID etat"
        android:inputType="number"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/button_cr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:minHeight="50dp"
        android:text="Créer compte rendu" />

    <EditText
        android:id="@+id/commentaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="commentaire"
        android:minHeight="50dp" />

</LinearLayout>
