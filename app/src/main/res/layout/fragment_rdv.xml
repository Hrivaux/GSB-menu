<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/loginText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prise de rendez-vous"
        android:textSize="36sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/lavender"
        android:layout_marginBottom="32dp" />

    <Spinner
        android:id="@+id/medecin_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID Médecin"
        android:inputType="number"
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/echantillon_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID Échantillon"
        android:inputType="number"
        android:layout_marginBottom="16dp" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:textColor="@color/lavender"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/button_organiser_visite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:text="Organiser la visite"
        android:layout_marginTop="32dp" />

</LinearLayout>

